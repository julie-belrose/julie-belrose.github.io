 ---
interface Props {
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary";
  class?: string;
  [x: string]: any;
}

const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-6 py-3",
};

// border-skin-hue/20s bg-skin-button-accent/20s borders border-solids flex items-center gap-1 rounded-md px-2 py-0.5 text-xs text-skin-muted print:border-none print:bg-transparent print:p-0 print:text-zinc-800

const styles = {
  outline: "border-2 border-orange-500 hover:bg-orange-500 text-orange-500 hover:text-white",
  primary:
    "bg-orange-500 text-white hover:bg-orange-600 border-2 border-transparent",
};

 ---

<button
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
